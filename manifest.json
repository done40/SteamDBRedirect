{
  "manifest_version": 3,
  "name": "SteamDB Redirect",
  "version": "1.3",
  "description": "Redirect any steamdb URL to steamdb.info.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["*://steamdb.com/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirectRules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://steamdb.info/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
